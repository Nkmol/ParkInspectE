<UserControl x:Class="ParkInspect.View.UserControls.KlantControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkInspect.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
             DataContext="{Binding Client, Source={StaticResource Locator}}">
    <Grid>

        <TabControl>
            <TabItem Header="Overview">
                <DataGrid ItemsSource="{Binding Clients}"></DataGrid>
            </TabItem>
            <TabItem Header="Management">
                <Label Content="Management goes here..." />
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
