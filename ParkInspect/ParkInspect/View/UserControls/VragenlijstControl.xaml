<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkInspect.View.UserControls"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ParkInspect.View.UserControls.VragenlijstControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="750"
             DataContext="{Binding Vragenlijsten, Source={StaticResource Locator}}">
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTab}">
            <Custom:MetroTabItem Header="Vragenlijsten" DataContext="{Binding Lists, Source={StaticResource Locator}}">
                <Grid Background="#aaaaaa"/>
            </Custom:MetroTabItem>
            <Custom:MetroTabItem Header="Templates" >
                <Grid Background="#aaaaaa">
                    <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="233" Width="237">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Template naam"/>
                            <DataGridTextColumn Header="Nieuwste versie"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="298,10,0,0" VerticalAlignment="Top" Width="124"/>
                    <Label x:Name="label" Content="Versie" HorizontalAlignment="Left" Margin="252,10,0,0" VerticalAlignment="Top"/>
                    <Button Command ="{Binding NewTemplateCommand}" x:Name="newTemplate" Content="Nieuwe template" HorizontalAlignment="Left" Margin="298,63,0,0" VerticalAlignment="Top" Width="124"/>
                    <Button Command ="{Binding EditTemplateCommand}" x:Name="editTemplate" Content="Wijzig Template" HorizontalAlignment="Left" Margin="298,93,0,0" VerticalAlignment="Top" Width="124"/>
                    <Button Command ="{Binding NewListCommand}" x:Name="newList" Content="Nieuwe vragenlijst" HorizontalAlignment="Left" Margin="298,126,0,0" VerticalAlignment="Top" Width="124"/>

                </Grid>
            </Custom:MetroTabItem>
            <Custom:MetroTabItem Header="Template editor" Visibility="{Binding EditorVisibility}" >
                <Grid Background="#aaaaaa" DataContext="{Binding Vragenlijsten.NewTemplateViewModel}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="162*"/>
                        <RowDefinition Height="91*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dataGrid_Copy" AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Left" Margin="382,10,0,0" VerticalAlignment="Top" Height="233" Width="237" Grid.RowSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Veld label"/>
                            <DataGridTextColumn Header="Veld type"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="confirm" Content="Opslaan" HorizontalAlignment="Left" Margin="624,55.75,0,0" VerticalAlignment="Top" Width="110" Grid.Row="1"/>
                    <Button x:Name="confirm_Copy" Content="Veld verwijderen" HorizontalAlignment="Left" Margin="624,10,0,0" VerticalAlignment="Top" Width="110"/>
                    <Button x:Name="button" Content="Veld Toevoegen" HorizontalAlignment="Left" Margin="143,73,0,0" VerticalAlignment="Top" Width="100"/>
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="9" Margin="79,11,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="164"/>
                    <Label x:Name="label1" Content="Veld label:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="label2" Content="Veld type:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="79,42,0,0" VerticalAlignment="Top" Width="164"/>
                </Grid>
            </Custom:MetroTabItem>
        </TabControl>
    </Grid>
</UserControl>

    