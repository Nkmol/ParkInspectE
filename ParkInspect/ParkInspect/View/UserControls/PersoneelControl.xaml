<UserControl x:Class="ParkInspect.View.UserControls.PersoneelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkInspect.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding Personeel, Source={StaticResource Locator}}">
    <Grid>
        <TabControl>
            <TabItem Header="Overview">
                <DataGrid IsReadOnly="True" ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedEmployee}"></DataGrid>
            </TabItem>
            <TabItem Header="Management">
                <Button Command="{Binding CreateItemCommand}">TEST DE ADD</Button>
            </TabItem>
        </TabControl>
        
    </Grid>
</UserControl>
