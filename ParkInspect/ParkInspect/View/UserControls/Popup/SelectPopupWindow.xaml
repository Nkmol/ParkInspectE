<simpleChildWindow:ChildWindow x:Class="ParkInspect.View.UserControls.Popup.SelectPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkInspect.View.UserControls.Popup"
        xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        CloseOnOverlay="True"
		GlowBrush="{DynamicResource AccentColorBrush}"
		BorderBrush="{DynamicResource AccentColorBrush}"
		BorderThickness="1"
		ShowCloseButton="True"
        d:DesignWidth="300"
        d:DesignHeight="300"
        Name="ChildWindow"
        DataContext="{Binding Popup, Source={StaticResource Locator}}">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <ContentPresenter Content="{Binding AdditionalContent, ElementName=ChildWindow}"></ContentPresenter>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <Button Content="Select" Command="{Binding SelectCommand}"></Button>
        </StackPanel>        
    </DockPanel>
</simpleChildWindow:ChildWindow>
