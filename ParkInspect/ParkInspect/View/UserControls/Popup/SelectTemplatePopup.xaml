<UserControl x:Class="ParkInspect.View.UserControls.Popup.SelectTemplatePopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkInspect.View.UserControls.Popup"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid ItemsSource="{Binding Templates}" SelectedItem="{Binding SelectedTemplateCollection, Mode=TwoWay}" x:Name="dataGrid" AutoGenerateColumns="False" IsReadOnly="True" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="161" Width="280">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Template naam" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Nieuwste versie" Binding="{Binding highestVersion}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox ItemsSource="{Binding Versions}" SelectedItem="{Binding SelectedVersion}" x:Name="comboBox" HorizontalAlignment="Left" Margin="94,188,0,0" VerticalAlignment="Top" Width="162"/>
        <Label x:Name="label" Content="Versie" HorizontalAlignment="Left" Margin="12,188,0,0" VerticalAlignment="Top"/>
        
    </Grid>
</UserControl>
