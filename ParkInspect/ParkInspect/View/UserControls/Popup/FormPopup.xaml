<UserControl x:Class="ParkInspect.View.UserControls.Popup.FormPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ParkInspect.View.UserControls"
             xmlns:convertor="clr-namespace:ParkInspect.Convertor"
             mc:Ignorable="d" d:DesignWidth="900"
             DataContext="{Binding Forms, Source={StaticResource Locator}}" Height="341.176">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <convertor:BitmapConvertor x:Key="BitmapConvertor" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <StackPanel>
                    <StackPanel Name="FormGrid" />

                    <UniformGrid Rows="1">
                        <Button x:Name="saveButton" Command="{Binding SaveCommand}" Content="Opslaan" Margin="10" />
                        <Button x:Name="addAttachmentButton" Command="{Binding AddAttachmentCommand}"
                                Content="Bijlage toevoegen" Margin="0,0,10,0" />
                    </UniformGrid>
                </StackPanel>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Expander>
                        <Expander.Header>
                            <TextBlock FontSize="18" FontWeight="Bold">Bijlage overzicht</TextBlock>
                        </Expander.Header>
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding ImagePaths}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Height="600" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Image Source="{Binding ., Converter={StaticResource BitmapConvertor}}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Expander>
                </ScrollViewer>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>