<UserControl x:Class="ParkInspect.View.UserControls.CustomerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:validationrules="clr-namespace:ParkInspect.Model.ValidationRules"
             mc:Ignorable="d"
             Width="1000"
             Height="600"
             DataContext="{Binding Client, Source={StaticResource Locator}}">
    <Grid>
        <TabControl>
            <TabItem Header="Overview">
                <StackPanel>

                    <Label Name="SearchLabel">
                        Zoeken:
                    </Label>

                    <Grid Name="FilterGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Name="NameFilter" HorizontalAlignment="Stretch"
                                 Text="{Binding NameFilter, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox Grid.Column="1" Name="PhoneFilter" HorizontalAlignment="Stretch"
                                 Text="{Binding PhoneFilter, UpdateSourceTrigger=PropertyChanged}" />
                        <TextBox Grid.Column="2" Name="EmailFilter" HorizontalAlignment="Stretch"
                                 Text="{Binding EmailFilter, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                    <DataGrid
                        ItemsSource="{Binding Clients}"
                        SelectedItem="{Binding SelectedClient}"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        VerticalScrollBarVisibility="Visible" Height="400" Margin="0,0,0.4,0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Width="350" Header="Naam" Binding="{Binding name}" />
                            <DataGridTextColumn Width="250" Header="Telefoonnummer" Binding="{Binding phonenumber}" />
                            <DataGridTextColumn Width="350" Header="Emailadres" Binding="{Binding email}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Management">
                <DockPanel LastChildFill="False">
                    <Grid DockPanel.Dock="Top" Height="223" Margin="0,0,0.4,0">
                        <Label x:Name="NameLabel" Content="Naam:" Margin="89,48,255,148" />
                        <Label x:Name="TelnrLabel" Content="Telefoonnummer:" Margin="89,88,186,109" />
                        <Label x:Name="EmailLabel" Content="Emailadres:" HorizontalAlignment="Left" Height="25"
                               Margin="89,128,0,0" VerticalAlignment="Top" Width="99" />
                        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="23" Margin="204,48,0,0"
                                 VerticalAlignment="Top" Width="150">
                            <TextBox.Text>
                                <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validationrules:IsNotEmptyValidationRule ValidationStep="RawProposedValue"
                                                                                  ValidatesOnTargetUpdated="True" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBox x:Name="Telnr" HorizontalAlignment="Left" Height="23" Margin="204,88,0,0"
                                 VerticalAlignment="Top" Width="150">
                            <TextBox.Text>
                                <Binding Path="Phonenumber" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validationrules:IsValidPhoneNumberRule ValidationStep="RawProposedValue"
                                                                                ValidatesOnTargetUpdated="True" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBox x:Name="Email" HorizontalAlignment="Left" Height="23" Margin="204,128,0,0"
                                 VerticalAlignment="Top" Width="150">
                            <TextBox.Text>
                                <Binding Path="Email" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validationrules:IsValidEmailValidationRule
                                            ValidationStep="ConvertedProposedValue"
                                            ValidatesOnTargetUpdated="True" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </Grid>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom"
                                DataContext="{Binding Client, Source={StaticResource Locator}}" Height="148"
                                Margin="0,0,0.4,0">
                        <Button Command="{Binding ResetButtonCommand}" Content="Reset" Margin="70,0,0,0"
                                HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="120" />
                        <Button Command="{Binding SaveCommand, UpdateSourceTrigger=PropertyChanged}"
                                Content="Sla klant op" Margin="80,0,0,0"
                                HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="120">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="IsEnabled" Value="false" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition
                                                    Binding="{Binding (Validation.HasError), ElementName=Name}"
                                                    Value="false" />
                                                <Condition
                                                    Binding="{Binding (Validation.HasError), ElementName=Telnr}"
                                                    Value="false" />
                                                <Condition
                                                    Binding="{Binding (Validation.HasError), ElementName=Email}"
                                                    Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="IsEnabled" Value="true" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>