<UserControl x:Class="ParkInspect.View.UserControls.CustomerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:convertor1="clr-namespace:ParkInspect.Convertor"
             mc:Ignorable="d" 
             Width="1000"
             Height="600"
             DataContext="{Binding Client, Source={StaticResource Locator}}">

    <UserControl.Resources>
        <convertor1:VisibilityConverter x:Key="VisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <TabControl>
            <TabItem Header="Overzicht" Visibility="{Binding Dashboard.TabStatus[15], Converter={StaticResource VisibilityConverter}, Mode=TwoWay, Source= {StaticResource Locator}}" >
                <DataGrid 
                    ItemsSource="{Binding Clients}" 
                    SelectedItem="{Binding SelectedClient}"
                    ScrollViewer.CanContentScroll="True" VerticalAlignment="Top"
                    ScrollViewer.VerticalScrollBarVisibility="Visible"
                    ScrollViewer.HorizontalScrollBarVisibility="Visible" 
                    SelectionMode="Single" AutoGenerateColumns="False" 
                    IsReadOnly="True" MaxHeight="500">

                    <DataGrid.Columns>
                        <DataGridTextColumn Width="150" Header="Naam" Binding="{Binding name}"/>
                        <DataGridTextColumn Width="150" Header="Telefoonnummer" Binding="{Binding phonenumber}"/>
                        <DataGridTextColumn Width="150" Header="Emailadres" Binding="{Binding email}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Management" DataContext="{Binding SelectedClient}" Visibility="{Binding Dashboard.TabStatus[16], Converter={StaticResource VisibilityConverter}, Mode=TwoWay, Source= {StaticResource Locator}}">
                <Grid>
                    <DockPanel Width="255" Height="250" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,0,0,0">
                        <StackPanel>
                            <Label x:Name="NameLabel" Content="Naam"/>
                            <TextBox x:Name="Name" Text="{Binding name}" Margin="5,0,0,10" Width="250" HorizontalAlignment="Left"/>

                            <Label x:Name="TelnrLabel" Content="Telefoonnummer"/>
                            <TextBox x:Name="Telnr" Text="{Binding phonenumber}" HorizontalAlignment="Left" Margin="5,0,0,10" Width="250"/>

                            <Label x:Name="EmailLabel" Content="Emailadres"/>
                            <TextBox x:Name="Email" Text="{Binding email}" HorizontalAlignment="Left" Margin="5,0,0,10" Width="250"/>
                        </StackPanel>
                    </DockPanel>
                    <DockPanel Width="255" Height="250" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,100,0">
                        <StackPanel>
                            <Label>Overige informatie ofso?</Label>
                            <Label>Geselecteerde klant zijn contactpersoon info tonen?</Label>
                        </StackPanel>
                    </DockPanel>
                    <StackPanel Orientation="Horizontal" DataContext="{Binding Client, Source={StaticResource Locator}}" Margin="100,250,100,0">
                        <Label Width="300" Height="50" VerticalAlignment="Top"></Label>
                        <Button Width="120" Command="{Binding CompleteClientCommand}" Content="Voeg toe" Margin="110,0,10,0" VerticalAlignment="Top"/>
                        <Button Width="120" Command="{Binding UpdateButtonCommand}" Content="Bewerken" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <Button Width="120" Command="{Binding ResetButtonCommand}" Content="Deselecteren" Margin="0,0,0,0" VerticalAlignment="Top"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>