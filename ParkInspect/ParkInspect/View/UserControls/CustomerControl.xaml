<UserControl x:Class="ParkInspect.View.UserControls.CustomerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:validationrules="clr-namespace:ParkInspect.Model.ValidationRules"
             mc:Ignorable="d"
             d:DesignHeight="386" d:DesignWidth="800"
             DataContext="{Binding Client, Source={StaticResource Locator}}">
    <Grid>

        <TabControl>
            <TabItem Header="Overview">
                <DataGrid
                    ItemsSource="{Binding Clients}"
                    SelectedItem="{Binding SelectedClient}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Width="150" Header="Naam" Binding="{Binding name}" />
                        <DataGridTextColumn Width="150" Header="Telefoonnummer" Binding="{Binding phonenumber}" />
                        <DataGridTextColumn Width="150" Header="Emailadres" Binding="{Binding email}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Management" DataContext="{Binding SelectedClient}">
                <DockPanel LastChildFill="False">
                    <Grid DockPanel.Dock="Top" Height="223" Margin="0,0,0.4,0">
                        <Label x:Name="NameLabel" Content="Naam:" Margin="89,47,255,148" />
                        <Label x:Name="TelnrLabel" Content="Telefoonnummer:" Margin="89,75,186,122" />
                        <Label x:Name="EmailLabel" Content="Emailadres:" HorizontalAlignment="Left" Height="25"
                               Margin="89,106,0,0" VerticalAlignment="Top" Width="99" />
                        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="23" Margin="204,47,0,0"
                                 VerticalAlignment="Top" Width="150">
                            <TextBox.Text>
                                <Binding Path="name" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validationrules:IsNotEmptyValidationRule ValidationStep="RawProposedValue"
                                                                                  ValidatesOnTargetUpdated="True" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBox x:Name="Telnr" HorizontalAlignment="Left" Height="23" Margin="204,75,0,0"
                                 VerticalAlignment="Top" Width="150">
                            <TextBox.Text>
                                <Binding Path="phonenumber" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validationrules:StringToIntValidationRule ValidationStep="RawProposedValue"
                                                                                   ValidatesOnTargetUpdated="True" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                        <TextBox x:Name="Email" HorizontalAlignment="Left" Height="23" Margin="204,103,0,0"
                                 VerticalAlignment="Top" Width="150">
                            <TextBox.Text>
                                <Binding Path="email" UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <validationrules:IsNotEmptyValidationRule ValidationStep="RawProposedValue"
                                                                                  ValidatesOnTargetUpdated="True" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </Grid>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom"
                                DataContext="{Binding Client, Source={StaticResource Locator}}" Height="148"
                                Margin="0,0,0.4,0">
                        <Button Command="{Binding CompleteClientCommand, UpdateSourceTrigger=PropertyChanged}"
                                Content="Maak nieuwe klant aan"
                                Margin="30,0,0,70" Height="78" Width="195">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="IsEnabled" Value="false" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition
                                                    Binding="{Binding ElementName=Name, Path=(Validation.HasError)}"
                                                    Value="false" />
                                                <Condition
                                                    Binding="{Binding ElementName=Telnr, Path=(Validation.HasError)}"
                                                    Value="false" />
                                                <Condition
                                                    Binding="{Binding ElementName=Email, Path=(Validation.HasError)}"
                                                    Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="IsEnabled" Value="true" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Command="{Binding ResetButtonCommand}" Content="Reset" Margin="70,0,0,0"
                                HorizontalAlignment="Left" Height="78" VerticalAlignment="Top" Width="195" />
                        <Button Command="{Binding UpdateButtonCommand, UpdateSourceTrigger=PropertyChanged}"
                                Content="Update klant" Margin="80,0,0,0"
                                HorizontalAlignment="Left" Height="78" VerticalAlignment="Top" Width="195">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="IsEnabled" Value="false" />
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition
                                                    Binding="{Binding ElementName=Name, Path=(Validation.HasError)}"
                                                    Value="false" />
                                                <Condition
                                                    Binding="{Binding ElementName=Telnr, Path=(Validation.HasError)}"
                                                    Value="false" />
                                                <Condition
                                                    Binding="{Binding ElementName=Email, Path=(Validation.HasError)}"
                                                    Value="False" />
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="IsEnabled" Value="true" />
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>