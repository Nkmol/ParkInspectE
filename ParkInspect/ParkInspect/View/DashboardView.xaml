<controls:MetroWindow x:Class="ParkInspect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"            
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="using:ParkInspect.View.UserControls"
        xmlns:userControls="clr-namespace:ParkInspect.View.UserControls"
        xmlns:dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        mc:Ignorable="d ignore"
        Height="600"
        Width="1000"
        Title="ParkInspect"
        DataContext="{Binding Dashboard, Source={StaticResource Locator}}"
        dialog:DialogParticipation.Register="{Binding Login, Source={StaticResource Locator}}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Skins/MainSkin.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="LayoutRoot">
        <TabControl>
            <TabItem Header="Klanten">
                <userControls:CustomerControl />
            </TabItem>
            <TabItem Header="Parkeerplaatsen">
                <userControls:ParkeerplaatsControl />
            </TabItem>
            <TabItem Header="Opdrachten">
                <userControls:AssignmentControl />
            </TabItem>
            <TabItem Header="Inspectie">
                <userControls:InspectionControl />
            </TabItem>
            <TabItem Header="Vragenlijst">
                <userControls:FormControl />
            </TabItem>
            <TabItem Header="Personeel">
                <userControls:EmployeeControl />
            </TabItem>
            <TabItem Header="Rapportage">
                <userControls:ReportControl />
            </TabItem>
            <TabItem Header="Afwezigheid">
                <userControls:AbsenceControl />
            </TabItem>
        </TabControl>
    </Grid>

    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands ShowLastSeparator="False"
                                 DataContext="{Binding Login, Source={StaticResource Locator}}">
            <Label Content="{Binding LoginName}" />
            <Button Command="{Binding ShowLoginDialogCommand}"
                    Content="Login"
                    IsEnabled="{Binding LoginButtonEnabled}" />
            <Button Command="{Binding LogoutCommand}"
                    Content="Logout"
                    IsEnabled="{Binding LogoutButtonEnabled}" />

        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>
</controls:MetroWindow>